<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorBackgroundGray</item>
        <item name="preferenceTheme">
            @style/PreferenceThemeOverlay.v14.Material
        </item>
</style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="ToolBarStyle">
        <item name="android:textColorPrimary">@color/actionBarForeground</item>
        <item name="android:textColorSecondary">@color/actionBarForeground</item>
        <item name="android:tint">@color/actionBarForeground</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textStyle">normal</item>
        <item name="actionMenuTextColor">@color/actionBarForeground</item>
    </style>

</resources>
