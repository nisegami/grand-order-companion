<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="world.arshad.grandordercompanion">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".GrandOrderCompanionApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="@xml/backup_descriptor">
        <activity
            android:name=".servant_info_list.ServantInfoListActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".servant_info.ServantInfoActivity"
            android:launchMode="singleTask"
            android:parentActivityName=".servant_info_list.ServantInfoListActivity" />
        <activity
            android:name=".needed_ascension_materials.NeededAscensionMaterialsActivity"
            android:launchMode="singleTask" />
        <activity android:name=".tracked_ascension_management.TrackedAscensionsActivity"
            android:launchMode="singleTask"  />
        <activity android:name=".tracked_skill_up_management.TrackedSkillUpsActivity"
            android:launchMode="singleTask"  />
    </application>

</manifest>